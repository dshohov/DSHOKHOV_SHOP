@model ChatHistory


@if (User.Identity.IsAuthenticated)
{
    @if (!User.IsInRole("User"))
    {
       <div class="container">
    <div class="row">
        <div class="col-md-8">
            <h3 class="my-3">Користувач: @Model.SenderName</h3>
            <h3 class="my-3">Дата отримання: @Model.CreatedDate</h3>
            <h3 class="my-6">Повідомлення: </h3>
            <p>@Model.Message</p>
            <form asp-action="Delete" asp-controller="Support" asp-route-messageId="@Model.Id">
                <a asp-action="SendResponse" class="btn btn-info" asp-controller="Support" asp-route-emailUser="@Model.SenderName">Відповісти</a>
                <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                class="btn btn-danger">Delete</button>
            </form>

        </div>
    </div>
    </div>
    }
}