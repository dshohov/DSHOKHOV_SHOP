@using shokhov_shop.ViewModels
@model RegisterViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<link rel="stylesheet" href="~/css/login.css">
<div class="main">  	
    <input type="checkbox" id="chk" aria-hidden="true">    
    <div class="signup">
        <form asp-controller="Account" asp-action="Register" method="post" role="form">

            <label for="chk" aria-hidden="true">@localizer["Зареєструватися"]</label>
            <input type="text" asp-for="Email" placeholder="@localizer["Електронна пошта"]" required="">
            <span asp-validation-for="Email" class="text-danger"></span>
            <input type="text" asp-for="UserName" placeholder="@localizer["Ім'я користувача"]" required="">
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="Password"  placeholder="@localizer["Пароль"]" required="">
            <span asp-validation-for="Password" class="text-danger"></span>
            <input asp-for="ConfirmPassword"  placeholder="@localizer["Підтвердити пароль"]" required="">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>


            <button class="but" type="submit">@localizer["Зареєструватися"]</button>
            
        </form>
        
    </div>
    <div class="login">
        <form>
            <label for="chk" aria-hidden="true"><a style="text-decoration:none" asp-controller="Account" asp-action="Login">@localizer["Увійти"]</a></label>
            
        </form>
    </div>
</div>